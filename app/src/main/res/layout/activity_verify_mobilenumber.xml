<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"

    tools:context="com.example.surya.digit.VerifyMobilenumber">
    <TextView
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify \nMobile Number"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_marginBottom="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:hint="Mobile Number"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/verifyMobileNumberedit"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:hint="Otp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/verifyOtp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/verifyMobileNumberedit"
        android:layout_centerHorizontal="true" />
    <Button
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="Continue"
        android:gravity="center"
        android:onClick="gotocompleteprofile"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/otpButton"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/verifyOtp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
