<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="com.example.surya.digit.EnterDetail">
    <TextView
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Details"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <EditText

        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:hint="Identification Number"
        android:inputType="number"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/verfyidnumber"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:hint="Issuing Authority"
        android:inputType="text"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/isuueingAuthority"
        android:layout_below="@+id/verfyidnumber"
        android:layout_alignStart="@+id/verfyidnumber"
        android:layout_marginBottom="10dp" />

    <EditText
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:hint="Date of Issue"
        android:inputType="date"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:background="@drawable/buttonlayout"
        android:id="@+id/dateofissue"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/isuueingAuthority" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        android:padding="20dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/image"
        android:id="@+id/imageverif"
        android:layout_below="@+id/dateofissue"
        android:layout_centerHorizontal="true" />
    <Button
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="Verify"
        android:gravity="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/detailVerify"
        android:onClick="gotouploadimageagain"
        android:layout_below="@+id/imageverif"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
