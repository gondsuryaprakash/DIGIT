<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="com.example.surya.digit.CompleteProfilenext">
    <TextView
        android:id="@+id/completeProfileNextTextView"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete \nProfile"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:layout_marginBottom="20dp"


        />




    <EditText

        android:layout_marginBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:hint="Street Address 1"
        android:inputType="textPostalAddress"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/completeProfileNexAdress1"
        android:layout_below="@+id/completeProfileNextTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <EditText

        android:layout_marginBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:hint="Street Address 2"
        android:inputType="textPostalAddress"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/completeProfileNexAdress2"
        android:layout_below="@+id/completeProfileNexAdress1"
        android:layout_alignStart="@+id/completeProfileNexAdress1" />

    <EditText
        android:layout_marginBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:hint="City"
        android:inputType="textPostalAddress"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/completeProfileNexCity"
        android:layout_below="@+id/completeProfileNexAdress2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:hint="Pin Code"
        android:inputType="number"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/completeProfileNexPin"
        android:layout_below="@+id/completeProfileNexCity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_marginBottom="30dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:hint="State"
        android:inputType="textPostalAddress"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/completeProfileNexState"
        android:layout_below="@+id/completeProfileNexPin"
        android:layout_centerHorizontal="true" />
    <Button
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="Done"
        android:gravity="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/completeProfileButtonDone"
        android:layout_marginBottom="20dp"
        android:onClick="gotobegincheck"

        android:layout_below="@+id/completeProfileNexState"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
